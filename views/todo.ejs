<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link
    rel="stylesheet"
    href="/static/stylesheets/styles.css"
    type="text/css"
  />

  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input type="text" name="todo" placeholder="Todo" />
        <input type="text" name="category" placeholder="Category"/>
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %>
        <li class="todo-list-item"">
          
          <div class="todo-list-item-name"><%= details.todo %></div>
          <div class="todo-list-item-name"><%= details.category %></div>
          
          <a href="/edit/<%= details._id %>" class="edit">
            <span class="fas fa-edit">Edit</span>
          </a>
          <a href="/remove/<%= details._id %>" class="remove">
            <span class="fas fa-times">Delete</span>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
